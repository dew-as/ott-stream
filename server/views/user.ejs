<% title=user.name %>

    <div class="bg-light">
        <div class="container py-5">
            <!-- Page Heading -->
            <h1 class="text-center mb-4">Watch History for <%= user.name %>
            </h1>
            <p class="text-center">Email: <%= user.email %>
            </p>

            <!-- Watch History Section -->
            <% if (user.watchHistory.length> 0) { %>
                <!-- Watch History Table -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Movie Name</th>
                                <th scope="col">Date and Time Watched</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.watchHistory.forEach(entry=> { %>
                                <tr>
                                    <td>
                                        <a href="/movies/movie/<%= entry.movie._id %>">
                                            <%= entry.movie.title %>
                                        </a>
                                    </td>
                                    <td>
                                        <%= new Date(entry.watchedAt).toLocaleString() %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <!-- No Watch History Message -->
                    <p class="text-center text-muted mt-4">No watch history available for this user.</p>
                    <% } %>
        </div>
    </div>